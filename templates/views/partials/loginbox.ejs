
<!--LOGIN BOX - MODAL -->
<div id="login" class="modal">
    <form class="modal-content animate" action="/userDetails" method="POST">
        <div class="imgcontainer">
            <span onclick="closeBox('#login')" class="close" title="Close Modal">&times;</span>
            <!--onclick="document.getElementById('login').style.display='none'"-->
        </div>

        <div class="container">

            <h3 class="boxtitle">Login</h3>

            <input type="text" placeholder="Enter your email" name="email" required>
            <input type="password" placeholder="Enter Password" name="password" required>
            <button class="log-btn" type="submit">Login</button>

            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            <span id = "register-link" >or <a href="#" onclick="openBox('#register');closeBox('#login')">Register</a></span>
            <div id = "popUp-bottom">
                <button type="button" onclick="closeBox('#login')" class="cancelbtn log-btn">Cancel</button>
                <span class="psw"><a href="#" onclick="openBox('#forgottenPassword');closeBox('#login')">Forgotten password</a></span>
            </div>
        </div>
    </form>
</div>


<!-- NEW USER (REGISTER) - MODAL -->
<div id="register" class="modal">
    <form class="modal-content animate" action="/registerDetails" method = "POST" >
        <div class="imgcontainer">
            <span onclick="closeBox('#register')" class="close" title="Close Modal">&times;</span>
        </div>
        <div class="container">

            <h3 class="boxtitle">Register</h3>

            <input type="text" placeholder="Enter E-mail" name="email" id = "registerEmail"required>
            <input type="text" placeholder="Enter your name" name="name" required>
            <input type="password" placeholder="Enter Password" name="password" id = "registerPassword" required>
            <button class="log-btn" type="submit">Submit</button>

            <div id = "popUp-bottom">
                <button class="cancelbtn reset-cancel-button log-btn" type="button" onclick="closeBox('#register');openBox('#login')" >Cancel</button>
            </div>
        </div>
    </form>
</div>


<!-- FORGOTTEN PASSWORD - MODAL -->
<div id="forgottenPassword" class="modal">
    <form class="modal-content animate" action="/forgottenPasswordDetails" method="GET" >
        <div class="imgcontainer">
            <span onclick="closeBox('#forgottenPassword')" class="close" title="Close Modal">&times;</span>
        </div>

        <div class="container">

            <h3 class="boxtitle">Forgotten Password</h3>

            <input type="text" placeholder="Enter your E-mail" name="email" required>
            <button class="log-btn" id = "reset-button" type="submit">Reset password</button>

            <div id = "popUp-bottom">
                <button class="cancelbtn reset-cancel-button log-btn" type="button" onclick="closeBox('#forgottenPassword');openBox('#login')" >Cancel</button>
            </div>
        </div>
    </form>
</div>